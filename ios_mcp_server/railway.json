{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "always"
  },
  "environments": {
    "production": {
      "variables": {
        "MCP_TRANSPORT": "sse",
        "MCP_HOST": "0.0.0.0",
        "PYTHONPATH": "/app"
      }
    }
  }
} 