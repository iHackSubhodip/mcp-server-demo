{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacks": {
      "installCommand": "pip install -r ios_mcp_server/requirements.txt"
    }
  },
  "deploy": {
    "startCommand": "python -m gunicorn ios_mcp_server.fastmcp_server:app --bind 0.0.0.0:$PORT --log-level debug",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
} 